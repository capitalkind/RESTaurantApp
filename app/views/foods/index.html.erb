<h1>RESTaurant App</h1>
<h3>Menu Index</h3>

  <nav>
    <%= link_to "Home", root_path, method: :get %>&nbsp;&nbsp;<%= link_to "Employees Index", employees_path, method: :get %>&nbsp;&nbsp;<%= link_to "New Employee", new_employee_path, method: :get %>&nbsp;&nbsp;<%= link_to "Log Out", sessions_path, method: :delete %>
    <br>
    <%= link_to "New Menu Item", new_food_path, method: :get %>
  </nav>

  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>

        <% @foods.each do |food| %>

        <tr>
          <td>
            <%= link_to food.name, edit_food_path(food) %>
          </td>
          <td>
            <%= link_to food.description, edit_food_path(food) %>
          </td>
          <td>
            <%= link_to food.price, edit_food_path(food) %>
          </td>
        </tr>

        <% end %>

      </tbody>
    </table>
  </div>


  </div>
