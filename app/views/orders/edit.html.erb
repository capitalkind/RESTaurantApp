<h1>RESTaurant App</h1>
<h3>Edit Order For Group #<%= @order.group.id %></h3>
<h4>Logged in as <%= current_employee.username %></h4>
  <nav>
    <%= link_to "Home", root_path, method: :get %>&nbsp;&nbsp;<%= link_to "Employees Index", employees_path, method: :get %>&nbsp;&nbsp;<%= link_to "Log Out", sessions_path, method: :delete %>
    <br>
    <%= link_to "Group Index", groups_path, method: :get %>
  </nav>

    <%= form_for @order, url: group_order_path do |f| %>
      <%= f.label "Food" %>
      <%= f.collection_select :food_id, Food.all, :id, :name %>
      <%= f.label :order_up %>
      <%= f.select :order_up, [['Cooking', 1], ['Ready', 2], ['Served', 3]] %>
      <%= f.submit %>
    <% end %>

 <%= button_to "Remove Order", group_order_path, method: :delete %>


