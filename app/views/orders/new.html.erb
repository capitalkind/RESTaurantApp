<h1>RESTaurant App</h1>
<h3>New Order For Group #<%= @group.id %></h3>
<h4>Logged in as <%= current_employee.username %></h4>


  <%= form_for @order, url: group_orders_path(@group) do |f| %>
      <%= f.label "Food" %>
      <%= f.collection_select :food_id, Food.all, :id, :name %>
      <%= f.label :order_up %>
      <%= f.select :order_up, [['Not Ready', 1], ['Ready', 2]] %>
      <%= f.hidden_field :group_id, :value => @group.id %>
      <%= f.submit %>
    <% end %>


