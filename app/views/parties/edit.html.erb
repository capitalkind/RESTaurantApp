<h1><span style="color: red">REST</span>aurant</h1>
<h4>Edit Party</h4>
<h5>Logged in as <span style="color: red"><%= current_employee.username %></span></h5>

  <nav>
    <%= link_to "Home", root_path, method: :get %>&nbsp;&nbsp;<%= link_to "Log Out", sessions_path, method: :delete %>&nbsp;&nbsp;<%= link_to "Employees Index", employees_path, method: :get %>&nbsp;&nbsp;<%= link_to "Party Index", parties_path, method: :get %>
  </nav>


  <div class="container">
    <%= form_for @party do |f| %>
      <%= f.label :guest_count %>
      <%= f.number_field :guest_count %>
      <%= f.label "Server" %>
      <%= f.collection_select :employee_id, Employee.all, :id, :username %>
      <%= f.submit :class => "btn btn-default btn-xs" %>
    <% end %>
  <%= button_to "Close Party", party_path(@party), method: :delete, :class => "btn btn-default btn-xs" %>
</div>



